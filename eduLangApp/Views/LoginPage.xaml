<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eduLangApp.Views.LoginPage"
             Title="Login">
    <ContentPage.Content>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Entry x:Name="emailEntry" Placeholder="tu_correo@edulang.com" Keyboard="Email" />
            <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True" />
            <Button Text="Iniciar sesión" Clicked="OnLoginClicked" BackgroundColor="GreenYellow"/>
        </VerticalStackLayout>
    </ContentPage.Content>
    
</ContentPage>