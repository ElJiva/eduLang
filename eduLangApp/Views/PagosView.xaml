<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eduLangApp.Views.PagosView"
             Title="Pagos"
             BackgroundColor="#0E172A">
    
       <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="💰 Historial de Pagos"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White" />

            <!-- 🟩 FORMULARIO NUEVO PAGO -->
            <Frame BackgroundColor="#1E293B" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Entry Placeholder="Tipo (Mensualidad o Inscripción)"
                           PlaceholderColor="#94A3B8"
                           TextColor="White" />

                    <Entry Placeholder="Mes (si aplica)"
                           PlaceholderColor="#94A3B8"
                           TextColor="White" />

                    <Entry Placeholder="Fecha (dd/mm/aaaa)"
                           PlaceholderColor="#94A3B8"
                           TextColor="White" />

                    <Entry Placeholder="Monto"
                           Keyboard="Numeric"
                           PlaceholderColor="#94A3B8"
                           TextColor="White" />

                    <Picker Title="¿Pagado?"
                            TitleColor="Gray"
                            TextColor="White"
                            BackgroundColor="#1E293B">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Sí</x:String>
                                <x:String>No</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <Button Text="Agregar Pago"
                            BackgroundColor="#22C55E"
                            TextColor="White"
                            CornerRadius="8"
                            FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <!-- 🟦 LISTA DE PAGOS -->
            <CollectionView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#334155"
                               BackgroundColor="#1E293B"
                               CornerRadius="10"
                               Padding="15"
                               Margin="5">
                            <VerticalStackLayout>
                                <Label Text="Tipo: Mensualidad" FontSize="18" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="Mes: Febrero" FontSize="14" TextColor="#CBD5E1"/>
                                <Label Text="Fecha: 05/02/2025" FontSize="14" TextColor="#94A3B8"/>
                                <Label Text="Monto: $1200.00" FontSize="14" TextColor="#38BDF8"/>
                                <Label Text="✅ Pagado" FontSize="14" TextColor="LimeGreen"/>

                                <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                                    <Button Text="Editar"
                                            BackgroundColor="#EAB308"
                                            TextColor="Black"
                                            CornerRadius="6"
                                            FontSize="12"/>

                                    <Button Text="Eliminar"
                                            BackgroundColor="#EF4444"
                                            TextColor="White"
                                            CornerRadius="6"
                                            FontSize="12"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- 🔙 BOTÓN DE REGRESO -->
            <Button Text="Regresar"
                    Clicked="OnBackClicked"
                    BackgroundColor="#1E40AF"
                    TextColor="White"
                    CornerRadius="8"
                    FontAttributes="Bold" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>