<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eduLangApp.Views.DocenteView"
             Title="Docentes">
    
    <VerticalStackLayout Padding="20" BackgroundColor="#009999">
        <Button Text="Cargar docentes" Clicked="OnLoadClicked" />

        <CollectionView ItemsSource="{Binding ListaDocentes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="#334155" BackgroundColor="CornflowerBlue">
                        <VerticalStackLayout>
                            <Label Text="{Binding UsuarioNombre}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding Correo}" />
                            <Label Text="{Binding Especialidad}" />
                            <Label Text="{Binding Disponibilidad}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>